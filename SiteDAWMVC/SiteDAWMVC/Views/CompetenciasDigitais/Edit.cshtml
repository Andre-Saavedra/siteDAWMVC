@model SiteDAWMVC.Models.CompetenciasDigitais

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:cornflowerblue">Editar</h1>

<h4>Competências Digitais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetenciasDigitaisId" />
            <div class="form-group">
                <label asp-for="Linguagem" class="control-label"></label>
                <input asp-for="Linguagem" class="form-control" />
                <span asp-validation-for="Linguagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nivel" class="control-label"></label>
                <input asp-for="Nivel" class="form-control" />
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DadosPessoaisId" class="control-label"></label>
                <input asp-for="DadosPessoaisId" class="form-control" />
                <span asp-validation-for="DadosPessoaisId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
