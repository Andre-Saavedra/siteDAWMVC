@model SiteDAWMVC.Models.Foto

@{
    ViewData["Title"] = "Delete";
}

<h1 style="color:cornflowerblue">Apagar</h1>

<h3 class="text-danger">Tem a certeza que quer apagar?</h3>
<div>
    <h4>Foto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FotoNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FotoNome)
        </dd>
        <dt class="col-sm-2">
            Foto
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/img/"+Model.FotoNome)" asp-append-version="true" width="250" height="250"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FotoId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
