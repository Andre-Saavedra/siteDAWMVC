@model SiteDAWMVC.Models.CvViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Curriculum</h1>

<div>
    <h3>Dados Pessoais</h3>
</div>

<div>
    Nome: @Model.DadosPessoais.Nome
</div>
<div>
    Data de Nascimento: @Model.DadosPessoais.DataNascimento
</div>
<div>
    E-mail: @Model.DadosPessoais.Email
</div>
<a asp-action="Index" asp-controller="DadosPessoais">Editar</a>

<div>
    <h3>Formação</h3>
</div>
<div>
    Formação: @Model.Formacao.Nome
</div>
<a asp-action="Index" asp-controller="Formacao">Editar</a>

<div>
    <h3>Experiência</h3>
</div>
<div>
    Experiencia: @Model.Experiencia.Nome
</div>
<a asp-action="Index" asp-controller="Experiencia">Editar</a>

<div>
    <h3>Competências Pessoais</h3>
</div>
<div>
    Competência: @Model.CompetenciasPessoais.Comptencia
</div>
<div>
    Observações: @Model.CompetenciasPessoais.Observacoes
</div>
<a asp-action="Index" asp-controller="CompetenciasPessoais">Editar</a>

<div>
    <h3>Competência Digitais</h3>
</div>
<div>
    Linguagem: @Model.CompetenciasDigitais.Linguagem
</div>
<div>
    Nível: @Model.CompetenciasDigitais.Nivel
</div>
<a asp-action="Index" asp-controller="CompetenciasDigitais">Editar</a>