@model SiteDAWMVC.Models.CompetenciasPessoais

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:cornflowerblue">Criar</h1>

<h4>Competências Pessoais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comptencia" class="control-label"></label>
                <input asp-for="Comptencia" class="form-control" />
                <span asp-validation-for="Comptencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DadosPessoaisId" class="control-label"></label>
                <input asp-for="DadosPessoaisId" class="form-control" />
                <span asp-validation-for="DadosPessoaisId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
