@model IEnumerable<SiteDAWMVC.Models.CompetenciasPessoais>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:cornflowerblue">Competências Pessoais</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comptencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observacoes)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comptencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacoes)
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CompetenciasPessoaisId">Editar</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CompetenciasPessoaisId">Detalhes</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CompetenciasPessoaisId">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a class= "btn btn-danger" asp-action = "Index" asp-controller = "CvViewModel" > Voltar </a>