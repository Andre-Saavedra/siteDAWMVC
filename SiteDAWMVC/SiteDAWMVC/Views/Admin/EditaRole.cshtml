@model EditaRole

@{ 
    ViewBag.Title = "Editar função";
}

<h1>Editar Função</h1>

<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Atualizar</button>
            <a asp-action="ListaRole" class="btn btn-danger">Cancelar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Utilizadores nesta função</h3>
        </div>
        <div class="card-body">
            @if(Model.Utilizadores.Any())
            {
                foreach(var utilizador in Model.Utilizadores)
                {
                    <h5 class="card-title">@utilizador</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nenhum utilizador nesta função</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditarUtilizadoresNosRoles" asp-controller="Admin" asp-route-RoleId ="@Model.Id"
               class="btn btn-primary" style="width:auto">Adicionar or Remover Utilizador</a>
        </div>
    </div>
</form>