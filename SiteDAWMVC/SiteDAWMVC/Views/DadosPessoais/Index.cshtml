@model IEnumerable<SiteDAWMVC.Models.DadosPessoais>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:cornflowerblue">Dados Pessoais</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telemovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telemovel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.DadosPessoaisId">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.DadosPessoaisId">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DadosPessoaisId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a class="btn btn-danger" asp-action="Index" asp-controller="CvViewModel">Voltar</a>