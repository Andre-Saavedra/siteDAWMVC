@model IEnumerable<SiteDAWMVC.Models.Formacao>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:cornflowerblue">Formação</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.FormacaoExperienciaId">Editar</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.FormacaoExperienciaId">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.FormacaoExperienciaId">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class= "btn btn-danger" asp-action = "Index" asp-controller = "CvViewModel" > Voltar </a>